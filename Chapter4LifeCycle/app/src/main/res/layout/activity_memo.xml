<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MemoActivity">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_memeo_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="텍스트를 입력해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_memo_next" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_memo_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        app:layout_constraintTop_toBottomOf="@id/et_memeo_text"
        app:layout_constraintStart_toStartOf="@id/et_memeo_text"
        app:layout_constraintEnd_toEndOf="@id/et_memeo_text"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>