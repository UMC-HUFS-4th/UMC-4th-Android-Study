<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">
    <EditText
        android:id="@+id/et_first_acitivity"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Activity로 전달할 내용을 입력해주세요"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_first_acitivity"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bt_first_acitivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="move to Second Activity"
        app:layout_constraintTop_toBottomOf="@id/et_first_acitivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>