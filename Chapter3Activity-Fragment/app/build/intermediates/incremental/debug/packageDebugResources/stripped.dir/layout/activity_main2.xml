<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/et_main"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_main_toast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <Button
        android:id="@+id/btn_main_toast"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="띄워보자"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_main_intent"
        app:layout_constraintTop_toBottomOf="@+id/et_main" />

    <Button
        android:id="@+id/btn_main_intent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="보내보자"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_main_toast"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main" />

    <Button
        android:id="@+id/btn_go_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to Fragment"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/et_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_main_toast"
        app:layout_constraintRight_toRightOf="@+id/btn_main_intent"/>

</androidx.constraintlayout.widget.ConstraintLayout>